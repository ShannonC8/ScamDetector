{
  "manifest_version": 3,
  "name": "Email Scam Detector",
  "version": "1.0",
  "description": "Detects scam content in emails.",
  "permissions": ["identity", "storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*",
    "https://outlook.office365.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.office365.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "oauth2": {
  "client_id": "32267406597-sfbj12ru7iftmft356e1sd8tbp4ov3fc.apps.googleusercontent.com", 
  "scopes": ["email", "profile", "openid"]
  },
  

  "action": {
    "default_popup": "popup.html",
    "default_title": "Scan Email for Scam"
  },
  "icons": {
    "128": "icons/icon.png"
  }
}